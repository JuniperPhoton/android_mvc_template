<?xml version="1.0" encoding="utf-8"?>

<!--
  <merge> tags mean that this layout should be used "inside" other components which
  have enclosing ViewGroup, and can't be used standalone.

  In our case, this layout is going to be programatically inflated inside our custom
  LinearLayout
-->

<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:id="@+id/txt_sms_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/txt_sms_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


</merge>
